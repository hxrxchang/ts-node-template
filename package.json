{
  "name": "ts-node-template",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "format": "yarn prettier --write .",
    "prettier:check": "yarn prettier --check ."
  },
  "devDependencies": {
    "@types/jest": "26.0.19",
    "@types/node": "14.14.14",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}
